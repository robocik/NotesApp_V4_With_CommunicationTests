@if (string.IsNullOrEmpty(LoadingText))
{
    <div class="spinner-border spinner-border-sm @CssClass" role="status"><span class="visually-hidden"></span></div>
}
else
{
    <p ><div class="spinner-border spinner-border-sm @CssClass" role="status"><span class="visually-hidden">@LoadingText</span></div>@LoadingText</p>
}


@code{
    [Parameter]
    public string? LoadingText { get; set; }
    
    [Parameter]
    public string? CssClass { get; set; }
}